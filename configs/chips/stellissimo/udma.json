{
  "includes": [ "ips/udma/udma_v3.json"],

  "vp_impl": "pulp.udma.udma_v3_pulpissimo_impl",

  "nb_periphs": 7,

  "interfaces" : ["spim", "i2c", "uart"],

  "properties": {
    "l2_read_fifo_size": 8
  },

  "archi_files": [
    "archi/udma/i2c/udma_i2c_v2.h",
    "archi/udma/spim/udma_spim_v3.h",
    "archi/udma/uart/udma_uart_v1.h"
  ],

  "hal_files": [
    "hal/udma/i2c/udma_i2c_v2.h",
    "hal/udma/spim/udma_spim_v3.h",
    "hal/udma/uart/udma_uart_v1.h"
  ],

  "uart": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [0],
    "offsets"      : ["0x00"],
    "is_master"    : true
  },

  "spim": {
    "version"      : 3,
    "nb_channels"  : 1,
    "ids"          : [1],
    "offsets"      : ["0x80"],
    "is_master"    : true,
    "eot_events"   : [ 7 ]
  },

  "i2c": {
    "version"      : 2,
    "nb_channels"  : 2,
    "ids"          : [2, 3],
    "offsets"      : ["0x100", "0x180"],
    "is_master"    : true
  },

  "sdio": {
    "version"      : 0,
    "nb_channels"  : 1,
    "ids"          : [4],
    "offsets"      : ["0x200"]
  },

  "regmap": {
    "SPIM0": {
      "type": "group",
      "template": "SPIM",
      "offset": "0x100"
    }
  }

}
